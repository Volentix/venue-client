---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: venue-ui-service
  namespace: venue-dev
spec:
  replicas: 1
  template:
    metadata:
      labels:
        application: venue-ui
        version: v1
    spec:
      containers:
      - name: venue-ui-service
        image: volentixlabs/venueui:IMAGE_TAG
        ports:
        - containerPort: 3000
---
apiVersion: v1
kind: Service
metadata:
  name: venue-ui-service
  namespace: venue-dev
  labels:
    application: venue-ui
    version: v1
spec:
  type: ClusterIP
  ports:
    - port: 80
      protocol: TCP
      targetPort: 3000
      name: external
  selector:
    application: venue-ui
    version: v1
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: "venue-ui-ing"
  namespace: venue-dev
  labels:
    application: venue-ui
spec:
  rules:
  - host: venue.dev.vlabs.ninja
    http:
      paths:
      - path: /
        backend:
          serviceName: "venue-ui-service"
          servicePort: 80